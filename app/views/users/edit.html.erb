<div class="mt-5">
  <div class="row">
    <div class="col-md-6 offset-md-3 bg-light p-5">
      <%= form_for(@user, url: user_path) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="row">
        <div class="col-md-3">
          <%# image_tag(@user.image, {alt: "profile_image", class: "w-100 rounded"}) %>
          <%= image_tag @user.image_url(:thumb), {alt: "profile_image", class: "w-100 rounded"} %>
          <%= f.file_field :image %>
        </div>
        <div class="col-md-9">
          <div class="name-form">
            <%= f.label "名前" %> <span class="badge badge-danger">必須</span>
            <%= f.text_field :name, class: 'form-control', required: true, placeholder: @user.name %>
          </div>
          <div class="gender-form mt-3 btn-group btn-group-toggle" data-toggle="buttons">
            <label class="btn btn-sm btn-outline-info"><%= f.radio_button :gender, "male" %> <%= fa_icon "male" %></label>
            <label class="btn btn-sm btn-outline-info"><%= f.radio_button :gender, "female" %> <%= fa_icon "female" %></label>
          </div>
          <div class="age-form mt-2">
            <%= f.label "年齢" %>
            <%= f.text_field :age, class: 'form-control', placeholder: @user.age %>
          </div>
          <div class="area-form mt-2">
            <%= f.label "エリア"%>
            <%= f.select :area_id, Area.names, {prompt: '選択してください'}, class: 'form-control' %>
          </div>
          <div class="homegelaende-form mt-2">
            <%= f.label "ホームゲレンデ" %>
            <%= f.text_field :home_gelaende, class: 'form-control', placeholder: @user.home_gelaende %>
          </div>
        </div>
      </div>
      <div class="selfintroduction-form mt-2">
        <%= f.label "自己紹介 ※140字以内でご記入ください" %>
        <%= f.text_area :self_introduction, class: 'form-control', "maxlength" => 140, placeholder: @user.self_introduction %>
      </div>
      <div class="submit-link">
        <div class="text-center mt-3">
          <%= f.submit "変更を保存", class: "btn btn-info btn-block" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
